<!-- 
1 -Permita mostrar um texto conforme a configuração de fontes. 
Deve ser possível o usuario selecionar propriedades como a fonte, 
tamanho, negrito e italico. 
-->
<!DOCTYPE html>
<html>
<head>

 <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

	 <script type="text/javascript">
			function mudaCor(){
				cor = document.getElementById("cor").value;
				document.getElementById('paragrafo').style.color = cor;
			}
	
			function tamfonte(selectTag) {
				var fnt = selectTag.options[selectTag.selectedIndex].text;
				var fonte = fnt + "px"
				document.getElementById("paragrafo").style.fontSize = fonte;
				
				document.getElementById("saida2").innerHTML = fonte;
			}
			
			function fonte(selectTag) {
				var fonte = selectTag.options[selectTag.selectedIndex].text;
				/*document.getElementById("paragrafo").style.font = fonte;*/
				document.getElementById("paragrafo").style.fontFamily= fonte;
				
				document.getElementById("saida2").innerHTML = fonte;
			}
			
			function negrito(){
				document.getElementById("paragrafo").style.fontWeight = "bold";
			}
			
			function normal(){
				document.getElementById("paragrafo").style.fontStyle = "normal";
				document.getElementById("paragrafo").style.fontWeight = "normal";
			}
			
			function italico(){
				document.getElementById("paragrafo").style.fontStyle = "italic";
			}
	</script>
<title>Mudança no paragrafo</title>
</head>
<body>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="page-header"><h1>Configurações</h1></div>
		</div>
		<div>
	<br />
<!-- ---------------------------------------------------------------------------------- -->	
		<label>Cor: </label>
			<input type="color" id="cor">
			<button class="glyphicon glyphicon-repeat" onclick="mudaCor()"></button>
			

<!-- ---------------------------------------------------------------------------------- -->		

		<label>Tamanho da Fonte: </label>
			<select onchange="tamfonte(this)">
				<option>8</option>
	  			<option>10</option>
	  			<option>14</option>
	  			<option>16</option>
	  			<option>18</option>
	  			<option>20</option>
	  			<option>22</option>
	  			<option>24</option>
	  			<option>26</option>
	  			<option>28</option>
	  			<option>30</option>
	  			<option>32</option>
			</select>


<!-- ---------------------------------------------------------------------------------- -->

		<label>Fonte: </label>
			<select onchange="fonte(this)">
				<option>Times New Roman</option>
	  			<option>sans-serif</option>
	  			<option>Georgia</option>
	  			<option>Arial</option>
	  			<option>Verdana</option>
	  			<option>Courier New</option>
	  			<option>Lucida Console</option>
	  			<option>Comic Sans MS</option>
	  			<option>Lucida Sans Unicode</option>
	  			<option>Trebuchet MS</option>
			</select>



<!-- ---------------------------------------------------------------------------------- -->		
	
	<button class="glyphicon glyphicon-bold" onclick="negrito()"></button>
	<button class="glyphicon glyphicon-italic" onclick="italico()"></button>
	<button class="glyphicon glyphicon-font" onclick="normal()"></button>
	
<!-- ---------------------------------------------------------------------------------- -->
	<br /><br />
	<div class="col-xs-3"></div>
	
	<div class="col-xs-6">
		<p id="paragrafo"> 
				Texto texto texto texto texto texto texto texto texto texto texto texto texto
	 	texto texto texto texto texto texto texto texto texto texto texto texto texto texto texto

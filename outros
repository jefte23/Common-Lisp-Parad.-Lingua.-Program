<!-- 
2 - Permita mostrar uma <div> "caixa" em que as bordas sejam configuráveis
pelo usuario, entre as propriedades que podem ser configuradas temos:
largura, cor, estilo e cantos (arredondamento).
-->
<!DOCTYPE html>
<html>
<head>

 <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<title>alterações na caixa  -div- </title>

	<script type="text/javascript">
		function corInterna() {
			cor = document.getElementById("cor").value;
			
			document.getElementById('myDiv').style.background = cor;
		}
	
		function tipoBorda() {
			largura = document.getElementById("largura").value;
			borda = document.getElementById("borda").value;
			cor = document.getElementById("corBorda").value;
			
			var tipBoarda = largura + " " + borda + " " + cor;
			
		   	 document.getElementById("myDiv").style.border = tipBoarda;
		}


		function cantos(selectTag) {
			//estilo = document.getElementById("estilo").value;
			estilo = selectTag.options[selectTag.selectedIndex].text;
			document.getElementById("myDiv").style.borderRadius = estilo;
		}
		
		//width
		
</script>
	
</head>
<body>
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<div class="page-header"><h1>Configurações</h1></div>
		</div>

<!-- -------------------------------------------------------------------------------------------- -->		

		<div class="col-xs-3">
			<label>Cor interna: </label>
				<input type="color" id="cor">
				<button class="glyphicon glyphicon-repeat" onclick="corInterna()"></button>
		</div>

<!-- -------------------------------------------------------------------------------------------- -->
		
		<div class="col-xs-5">
			<label>Cor:  </label>
				<input type="color" id="corBorda">
			
			<label>largura: </label>
				<select id="largura">
					<option>2px</option>
		  			<option>5px</option>
		  			<option>8px</option>
		  			<option>12px</option>
		  			<option>14px</option>
		  			<option>16px</option>
					<option>18px</option>
					<option>20px</option>
				</select>

			<label>Estilo: </label>
				<select id="borda">
					<option>dotted</option>
		  			<option>dashed</option>
		  			<option>solid</option>
		  			<option>double</option>
		  			<option>groove</option>
		  			<option>ridge</option>
		  			<option>inset</option>
		  			<option>outset</option>
		  			<option>none</option>
		  			<option>hidden</option>
				</select>
			
			<button class="glyphicon glyphicon-repeat" onclick="tipoBorda()"></button>						
		</div>
			
<!-- -------------------------------------------------------------------------------------------- -->

		<div class="col-xs-2">
			<label>Estilo: </label>
				<select onchange="cantos(this)">
					<option>0px</option>
		  			<option>5px</option>
		  			<option>8px</option>
		  			<option>12px</option>
				</select>
		</div>
		<div class="col-xs-2"></div>

<!-- -------------------------------------------------------------------------------------------- -->		      
		<div class="col-xs-2">
			<label></label>

		</div>
		</div>				

	</div>
<br /><br />
	
	<div class="container">
		<div class="col-xs-12">
			<div id="myDiv" style="background-color:#F2F2F2; height:300px; width:1200px;"></div>
		</div>
	</div>
</body>
